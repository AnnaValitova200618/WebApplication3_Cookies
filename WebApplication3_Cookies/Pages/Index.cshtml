@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<form method="post"> 
<div class="text-center">
    <h1 class="display-5">Авторизация</h1>
    <h5>Логин</h5>
    <input type="text" asp-for="@Model.User.Login"/>
    <h5>Пароль</h5>
    <input type="password" asp-for="@Model.User.Password"/>
</div>
<div  class="text-center p-2">
    <button class="btn-dark btn">Войти</button>
    <a class="btn-dark btn">Зарегестрироваться</a>
</div>
<div class="text-center">
    <h6>@Model.Message</h6>
</div>
</form>